{
  "name": "luontotieto-api-gateway",
  "version": "0.0.1",
  "description": "API gateway for luontotieto",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "build": "yarn clean && yarn install && tsc --build .",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint . --fix",
    "dev": "tsc --build . && concurrently --prefix '[{name}]' --names 'tsc,nodemon' 'tsc --build --preserveWatchOutput -w .' 'NODE_ENV=local nodemon dist/index.js'"
  },
  "dependencies": {
    "@node-saml/node-saml": "^5.0.0",
    "@node-saml/passport-saml": "^5.0.0",
    "axios": "^1.7.1",
    "connect-redis": "^8.0.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "express": "^5.0.1",
    "express-http-proxy": "^2.1.1",
    "express-session": "^1.18.0",
    "fast-xml-parser": "^5.0.8",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "make-error-cause": "^2.3.0",
    "nocache": "^4.0.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pino": "^9.5.0",
    "pino-http": "^10.2.0",
    "pino-pretty": "^13.0.0",
    "query-string": "^9.1.0",
    "redis": "^4.7.0",
    "source-map-support": "^0.5.21",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/express-http-proxy": "^1.6.6",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^22.14.0",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1",
    "@types/passport-strategy": "^0.2.35",
    "@types/pino-http": "^5.8.1",
    "@types/pino-pretty": "^5.0.0",
    "@types/pino-std-serializers": "^4.0.0",
    "@types/redis": "^4.0.11",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "engines": {
    "node": ">= 20.11.0"
  },
  "packageManager": "yarn@4.5.0"
}
